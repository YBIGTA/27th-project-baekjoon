# EC2 풀을 위한 AWS 설정
AWS_REGION=ap-northeast-2

# EC2 인스턴스 사양
# AMI에는 Docker, AWS SSM 에이전트 및 remote_executor.py 스크립트가 설치되어 있어야 합니다.
EC2_AMI_ID=ami-xxxxxxxxxxxxxxxxx
EC2_INSTANCE_TYPE=t2.micro

# EC2 네트워킹 및 IAM
# 보안 그룹은 AWS 서비스 및 Docker Hub로의 아웃바운드 트래픽을 허용해야 합니다.
EC2_SECURITY_GROUP_ID=sg-xxxxxxxxxxxxxxxxx
# 인스턴스에 연결된 IAM 역할에는 AmazonSSMManagedInstanceCore 정책이 있어야 합니다.
EC2_IAM_INSTANCE_PROFILE_ARN=arn:aws:iam::123456789012:instance-profile/YourInstanceProfileForCodeRunner

# Celery 설정
REDIS_URL=redis://redis:6379/0

# Worker 설정
# 원격 EC2 인스턴스의 실행기 스크립트 경로입니다.
REMOTE_EXECUTOR_PATH=/home/ec2-user/remote_executor.py